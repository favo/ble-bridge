#!/bin/bash
set -e

echo "üîß Post-install: configuring services and permissions..."

# Enable bluetooth-power service
systemctl enable bluetooth-power

# Disable built-in bluetooth service
systemctl disable bluetooth

# Set correct capabilities on Node.js binary
NODE_BIN=$(command -v node)
if [ -n "$NODE_BIN" ]; then
  setcap cap_net_raw+eip "$(readlink -f "$NODE_BIN")"
else
  echo "‚ö†Ô∏è Warning: Node.js binary not found!"
fi

# Enable your BLE bridge service
systemctl enable pintomind-ble-bridge

echo "‚úÖ Post-installation steps complete."